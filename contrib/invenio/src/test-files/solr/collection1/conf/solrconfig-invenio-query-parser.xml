<?xml version="1.0" ?>

<config>
  <luceneMatchVersion>${tests.luceneMatchVersion:LUCENE_CURRENT}</luceneMatchVersion>
  <dataDir>${solr.data.dir:}</dataDir>
  <directoryFactory name="DirectoryFactory" class="${solr.directoryFactory:solr.RAMDirectoryFactory}"/>
  <requestHandler name="standard" class="solr.StandardRequestHandler"></requestHandler>
  
  <requestHandler name="/invenio" class="solr.InvenioRequestHandler" default="false">
    <!-- default values for query parameters -->
     <lst name="defaults">
       <str name="defType">iq</str>
       <str name="iq.mode">maxinv</str>
       <str name="iq.xfields">fulltext</str>
       <str name="iq.idfield">recid</str>
       <str name="q.op">AND</str>
       <str name="echoParams">explicit</str>
     </lst>
  </requestHandler>
  
  
  <!--  MontySolr/Invenio query parser -->
  <queryParser name="iq" class="solr.InvenioQParserPlugin">
    <lst name="defaults">
       <str name="idfield">recid</str>
    </lst>
  </queryParser>

  
</config>
