<project name="invenio" default="default">

	<description>
    Invenio embedded in Solr
  </description>

	<import file="../contrib-build.xml"/>

	<!--Needed only if you want to regenerate InvenioQueryParser syntax,
	        which is probably not what you need to do -->

	<property name="javacc.home" value="/some/path/javacc-5.0" />

	<path id="classpath">
		<path refid="base.classpath"/>
		<fileset dir="../antlrqueryparser/lib">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	<path id="run.classpath">
		<path refid="classpath"/>
		<pathelement location="${build.dir}/classes/java"/>
	</path>

	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile-core" depends="compile,common.compile-core"/>


	<target name="compile" description="Compiles all the java classes" >
		<javac classpathref="classpath" 
            srcdir="src/java"
            destdir="${build.dir}/classes/java"
            >
			<include name="**/*.java"/>
		</javac>
	</target>
    
    	
    
	<import file="../antlrqueryparser/build.xml"/>
	<property name="inv.grammars.dir" location="./grammars" />
    <property name="inv.parser.dir" location="src/java/org/apache/lucene/queryParser/aqp/parser" />
	
	<target name="xxx" >
		   <generate-syntax-parser grammar-dir="${aqp.parser.dir}" grammar-name="Invenio"/>
		<generate-syntax-parser grammar-dir="${aqp.parser.dir}" grammar-name="FixInvenio"/> 
	</target>
	

	<target name="get-grammar" description="Compiles the grammar for Invenio" depends="config-antlr">
		<!-- it is little bit more complex, as we have 2 grammars to take care of -->
		
		<generate-grammar grammar-name="FixInvenio"
		             grammar-dir="${inv.grammars.dir}"
		             parser-dir="${inv.parser.dir}"
		             build-dir="${build.dir}/classes/java"
		             classpathref="test.classpath"
		               />
		<generate-grammar grammar-name="Invenio"
		                     grammar-dir="${inv.grammars.dir}"
		                     parser-dir="${inv.parser.dir}"
		                     build-dir="${build.dir}/classes/java"
		                     classpathref="test.classpath"
		                       />
		
	</target>

	<target name="config-antlr" >
		<path id="test.classpath">
			<path refid="classpath"/>
			<path refid="test.base.classpath"/>
			<pathelement location="${build.dir}/classes/test"/>
			<pathelement location="${common.dir}/build/contrib/antlrqueryparser/classes/test"/>
			<pathelement location="${common.dir}/build/contrib/antlrqueryparser/classes/java"/>
			<fileset dir="../antlrqueryparser/lib">
				<include name="**/*.jar"/>
			</fileset>
		</path>
	</target>


</project>
